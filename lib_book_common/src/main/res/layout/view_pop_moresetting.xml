<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/bg_shadow2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/turn_pages_with_the_volume_keys"
                android:textColor="#767676" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_key"
                android:layout_width="47dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                app:kswBackColor="@drawable/selector_switchbutton"
                app:kswThumbColor="#ffffff" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="#ffffff"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:src="#f3f3f3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingEnd="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/tap_on_the_sides_to_turn_the_page"
                android:textColor="#767676" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/sb_click"
                android:layout_width="47dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                app:kswBackColor="@drawable/selector_switchbutton"
                app:kswThumbColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>