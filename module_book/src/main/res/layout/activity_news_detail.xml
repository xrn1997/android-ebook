<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.ebook.book.mvvm.viewmodel.NewsDetailViewModel"/>
    </data>
    <LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txt_news_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2a2a2a"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:singleLine="true"
        android:gravity="center"
        android:text="@{viewModel.mNewsDetails.title}"
        />
    <TextView
        android:id="@+id/txt_news_detail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2a2a2a"
        android:layout_margin="20dp"
        android:textSize="15sp"
        android:lineSpacingExtra="10dp"
        android:text="@{viewModel.mNewsDetails.content}"
        />
</LinearLayout>
</layout>